<%- include("partials/header") -%>
<h1>Compose</h1>
<form action="/compose" method="post">
    <div class="form-group">
        <label for="inp">Title</label>
        <input class="form-control" type="text" name="inp" id="inp">
        <label for="post">Post</label>
        <textarea class="form-control" name="post" id="post" cols="30" rows="5"></textarea>
    </div>
    <button class="btn btn-primary" type="submit" name="submit">Publish</button>
</form>

